<h1 class="books-heading">Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>show edit destroy</td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2 class="newbooks-heading">New book</h2>

<%= form_with model: @book, url: '/books', local: true do |f| %>
  
  <div class="newbooks-form">
    <%= f.label :title %> <br>
    <%= f.text_field :title %>
  </div>
  <div class="newbooks-form">
    <%= f.label :body %> <br>
    <%= f.text_area :body %>
  </div>
  
  <%= f.submit 'Create Book' %>
  
<% end %>