<h1 class="books-heading">Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>
          <%= link_to 'show', book_path(book) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2 class="newbooks-heading">New book</h2>

<%= form_with model: @book, url: '/books', local: true do |f| %>

  <%= render 'layouts/error_messages' %>
  
  <div class="newbooks-form">
    <%= f.label :title, class: 'title-head' %> 
    <%= f.text_field :title %>
  </div>
  <div class="newbooks-form">
    <%= f.label :body, class: 'body-head' %>
    <%= f.text_area :body %>
  </div>
  
  <%= f.submit 'Create Book' %>
  
<% end %>